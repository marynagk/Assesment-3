<p id="notice"><%= notice %></p>

<h1>Goals</h1>

<table>
  <thead>
    <tr>
      <th>Tags</th>
      <th>User</th>
      <th>Category</th>
      <th>Image</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.tags %></td>
        <td><%= goal.user_id %></td>
        <td><%= goal.category_id %></td>
        <td><%= goal.image %></td>
        <td><%= goal.description %></td>
        <td><%= goal.status %></td>
        <td><%= link_to 'Show', [goal.user, goal] %></td>
        <td><%= link_to 'Edit', edit_user_goal_path(goal.user, goal) %></td>
        <td><%= link_to 'Destroy', [goal.user, goal], :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Goal', new_user_goal_path(params[:user_id]) %>
